<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog title="{i18n>fragtitle}">
		<f:SimpleForm>
			<f:content>
				<Label text="{i18n>fname}" design="Bold"></Label>
				<Input id="ffname"></Input>
				<Label text="{i18n>lname}" design="Bold"></Label>
				<Input id="flname"></Input>
			</f:content>
		</f:SimpleForm>
		<buttons>
			<Button id="backf" text="{i18n>back}" type="Emphasized" press="onPressbackf" />
			<Button id="closef" text="{i18n>close}" press="onPressclosef"/>
			<Button id="thirdf" text="{i18n>third}" press="onPressDefaultf "/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>